# pnpm configuration

# Use strict peer dependencies (safer)
strict-peer-dependencies=false

# Auto install peers
auto-install-peers=true

# Save exact versions (reproducible builds)
save-exact=false

# Public hoist pattern (for compatibility)
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

# Shamefully hoist (only if needed, disabled by default)
shamefully-hoist=false